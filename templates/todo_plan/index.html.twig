{% extends 'base.html.twig' %}

{% block title %}Hello TodoApp!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
Todo Work List-API1
    {% if todoplans %}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Task</th>
          <th>Time</th>
          <th>Level</th>
        </tr>
      </thead>
      <tbody>
        {%  for todoplan in todoplans %}
          <tr>
            <td>{{ todoplan.id }}</td>
            <td>{{ todoplan.task }}</td>
            <td>{{ todoplan.timeHour }}</td>
            <td>{{ todoplan.hardDegree }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Todo_Plan is'not</p>
  {% endif %}
</div>
{% endblock %}


